@model IEnumerable<footballapp.Models.Match>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Matches List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.matchWeek)
        </th>
        <th>
            Local
        </th>
        <th>
            Visitor
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.matchWeek)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Team_1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Team_2)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Matches", new { id = item.Id })">
                <i class="small material-icons">create</i>
            </a>
            <a href="@Url.Action("Details", "Matches", new { id = item.Id })">
                <i class="small material-icons">details</i>
            </a>
            <a href="@Url.Action("Delete", "Matches", new { id = item.Id })">
                <i class="small material-icons">delete</i>
            </a>
        </td>
    </tr>
}

</table>
